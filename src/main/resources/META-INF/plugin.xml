<idea-plugin>
    <id>dev.paulshields.AssistantView</id>
    <name>Assistant View</name>
    <vendor url="http://paulshields.dev">Paul Shields</vendor>

    <description><![CDATA[
    Plugin for JetBrains IDEs to provide an XCode inspired Assistant View.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <applicationListeners>
        <listener class="dev.paulshields.assistantview.DependencyInjector" topic="com.intellij.ide.AppLifecycleListener" />
    </applicationListeners>

    <projectListeners>
        <listener class="dev.paulshields.assistantview.FileOpenedListener" topic="com.intellij.openapi.fileEditor.FileEditorManagerListener" />
    </projectListeners>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Assistant View" anchor="right" factoryClass="dev.paulshields.assistantview.AssistantViewProducer" />
    </extensions>
</idea-plugin>
